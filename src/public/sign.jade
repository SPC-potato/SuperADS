section(class="section")
    div(class="login-layer form-wrap container")
        h3(class="text-center") Sign
        form(class="form-horizontal")
            div(class="form-group")
                label(for="login-username" class="col-sm-2 control-label") username
                div(class="col-sm-10")
                    input(type="text" class="form-control" id="login-username" placeholder="Username")
            div(class="form-group")
                label(for="login-password" class="col-sm-2 control-label") Password
                div(class="col-sm-10")
                    input(type="password" class="form-control" id="login-password" placeholder="Password")
            div(class="form-group")
                label(for="login-code" class="col-sm-2 control-label") code
                div(class="col-sm-10")
                    input(type="text" class="form-control" id="login-code" placeholder="code")
            div(class="form-group")
                label(for="login-username" class="col-sm-2 control-label") username
                div(class="col-sm-offset-2 col-sm-10")
                    button(type="submit" class="btn btn-default login-post") Login