//UI统一样式
  h1
    font-size 36px
  //文章首要标题
  h2
    font-size 34px
    line-height 1.2
    p
      font-size 1em
  a
    color #fff

  //段落章节间距
  .section
    padding  80px 0
    overflow hidden
    h3
      margin-bottom 80px

  //背景图
  .bg-img
    background-image url('../../img/bg-img.png');
    position relative
    color #fff



//公共样式//

  //头部与导航
  .header
    border-bottom 1px solid rgba(194, 15, 42 ,.2);
    .nav
      padding-top 20px
    .nav-tabs
      border:none;
      color:#fff;
      li>a
        border none
        color black
      li.active,li a:focus
        background none
      li.active>a
        background-color: transparent;
        border none
        color rgba(194, 15, 42 ,1)
      li>a:hover
        background-color: transparent;
        color rgba(194, 15, 42, 1)
        border none

  //尾部信息
  .footer
    font-size 12px
    h5
      font bold 14px ''
      color red













//去除插件默认
.nav-tabs
  border none

.slick-slide
  height auto