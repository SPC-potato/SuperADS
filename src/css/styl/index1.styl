/*
  统一UI规范
*/

h1
  font-size 36px
//文章首要标题
h2
  font-size 34px
  line-height 1.2
  p
    font-size 1em


a
  color #fff

.section
  padding  80px 0
  overflow hidden
  h3
    margin-bottom 80px
.section:first-child
  padding-top 0px

.pull-bg
  background-position-y 110px
  background-repeat repeat-x



//宽幅背景图
.bg-img
  background-image url('../../img/bg-img.png');
  position relative
  color #fff
  .bg-img-decorate
    position absolute
    bottom 50px
    z-index 1

.header-bg
  background-color: #FFFFFF
  padding-top 30px


.header
  border-bottom 1px solid rgba(194, 15, 42 ,.8);
  .nav
    padding-top 20px
  .nav-tabs
    border:none;
    color:#fff;
    li>a
      border none
      color black
    li.active>a
      background-color: transparent;
      border none
      color rgba(194, 15, 42 ,1)
    li>a:hover
      background-color: transparent;
      color rgba(194, 15, 42, 1)
      border none
.banner
  padding:50px 0;
  position relative
  z-index 999



.introducr
  color:white
  word-wrap: break-word
  p
    text-indent 2em;
  .btn-sign-up

    background-image: linear-gradient(to right bottom, #eb3349 0%, #050100 70%, #eb3349 100%);
    background-position: 0%;
    background-size: 200% 200%;
    border-radius: 50px;
    border none
    color: #fff;
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 1.2px;
    line-height: 1;
    min-width: 180px;
    padding: 20px 40px;
    text-transform: uppercase;
    margin-top 20px


.btn-send
  position absolute
  left 50%
  margin-left -90px;
  background-image: linear-gradient(to right bottom, #eb3349 0%, #050100 70%, #eb3349 100%);
  background-position: 0%;
  background-size: 200% 200%;
  border-radius: 50px;
  border none
  color: #fff;
  font-size: 12px;
  font-weight: 600;
  letter-spacing: 1.2px;
  line-height: 1;
  min-width: 180px;
  padding: 20px 40px;
  text-transform: uppercase;
  margin-top 36px

.about-us
  img
    padding-bottom 30px
  .about-card
    border 1px solid #efefef
    border-radius 10px
    padding 20px 10px
    height:240px
    .about-img
      width 100px

.our-stats
 .stats-img
  padding-bottom 30px
 .stats-data
    color red
    font-size 26px
 .stats-msg
    font-size 18px






.companion
  img
    height 40px
    margin-bottom 60px



.footer
  margin-top 80px
  font-size 12px
  h5
    font bold 14px ''
    color red
  .icon
    background-image url('../../img/shejiaologo.png')
    height 80px
    background-repeat no-repeat
    background-position: -104px -127px;
.form-wrap
  border-radius: 10px;
  box-shadow: 0px 0px 11px -5px;
  background-color #fff
  color #333
  h3
    margin-bottom 40px
  .form-groud
    overflow hidden
    height 50px
    label,input
      display inline-block
    input
      border none
      border-bottom 1px solid #efefef


.sign-layer,.login-layer
  padding 0 80px











